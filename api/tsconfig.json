{
	"compilerOptions": {
		"target":                           "ES2022",
		"module":                           "commonjs",
		"rootDir":                          "src",
		"outDir":                           "dist",
		"experimentalDecorators":           true,
		"emitDecoratorMetadata":            true,
		"esModuleInterop":                  true,
		"forceConsistentCasingInFileNames": true,
		"strict":                           true,
		"skipLibCheck":                     true,
		"strictPropertyInitialization":     false,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts"
	]
}
